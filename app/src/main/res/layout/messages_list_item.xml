<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp">
    <ImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tvMsgUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:layout_toEndOf="@+id/ivUserIcon"
        android:layout_alignParentTop="true"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/tvMsgContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextTextTextTextTextTextTextTextTextTextTextText"
        android:layout_toEndOf="@+id/ivUserIcon"
        android:layout_below="@+id/tvMsgUserName"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvMsgDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-12-12 00:00"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"/>
</RelativeLayout>